rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to guild members (for homepage widget)
    match /guild-members/{memberId} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }

    // Allow public read access to guild roster snapshots
    match /guild-roster-snapshots/{snapshotId} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }

    // Roster survey responses - public read, auth write
    match /roster/{responseId} {
      allow read: if true; // Public read pour afficher le roster
      allow write: if request.auth != null; // Seulement les utilisateurs Discord authentifiés peuvent écrire
    }

    // Admin verification - allow authenticated users to check if they're admin
    match /admins/{email} {
      allow read: if request.auth != null; // Les utilisateurs authentifiés peuvent vérifier leur statut admin
      allow write: if false; // Only manual configuration
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
